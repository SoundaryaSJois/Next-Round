  <button class="submit-btn" onclick="checkAnswer()">Submit</button>
  
  <script>
    function checkAnswer() {
      let correctAnswer = "FIVEVALENTINESANDCOUNTING";
      let answer = document.querySelectorAll(".letter");
      let userAnswer = "";
      
      answer.forEach(input => {
        userAnswer += input.value.toUpperCase();
      });
      
      if (userAnswer === correctAnswer) {
        window.location.href = "https://soundaryasjois.github.io/Next-Round/reward.html";
      } else {
        alert("That's not quite right. Try again!");
      }
    }
  </script>
