  <button class="submit-btn" onclick="checkAnswer()">Submit</button>
  
  <script>
    function checkAnswer() {
      // Build each word from the inputs
      function getWord(wordId, count) {
        let word = "";
        for (let i = 1; i <= count; i++) {
          word += document.getElementById(`${wordId}-${i}`).value.toUpperCase();
        }
        return word;
      }
      
      let word1 = getWord("letter1", 4); // FIVE
      let word2 = getWord("letter2", 10); // VALENTINES
      let word3 = getWord("letter3", 3); // AND
      let word4 = getWord("letter4", 8); // COUNTING
      
      let answer = word1 + " " + word2 + " " + word3 + " " + word4;
      let correctAnswer = "FIVE VALENTINES AND COUNTING";
      
      if (answer === correctAnswer) {
        alert("Correct! You've solved the final round!");
      } else {
        alert("That's not quite right. Try again!");
      }
    }
  </script>
